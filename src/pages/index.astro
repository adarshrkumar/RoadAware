---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Home">
    <section id="welcome-section" class="section">
        <h1 class="section-title">Welcome to RoadAware</h1>
        <p class="section-text">Learn about crucial infrastructure and transportation issues in your area.</p>
    </section>
    
    <section id="infrastructure-challenges" class="section">
        <h2 class="section-title">Infrastructure Challenges</h2>
        <p class="section-text">Explore the various infrastructure challenges facing our communities and their impact on daily life.</p>
    </section>
    
    <section id="transportation-issues" class="section">
        <h2 class="section-title">Transportation Issues</h2>
        <p class="section-text">Discover the transportation challenges and their effects on mobility and accessibility.</p>
    </section>
    
    <section id="did-you-know" class="did-you-know animate-fade-in">
        <h2 class="section-title">Did You Know?</h2>
        <div id="fact-container" class="fact-container"></div>
    </section>
</Layout>